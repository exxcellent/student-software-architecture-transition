{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@software-architecture-transition/shared": ["libs/shared/src/index.ts"],
      "@software-architecture-transition/environments": [
        "apps/route-planning/src/environments/index.ts"
      ],
      "@software-architecture-transition/shared-ui-components": [
        "libs/shared-ui-components/src/index.ts"
      ]
    }
  },
  "include": ["**/*.d.ts"],
  "exclude": ["node_modules", "tmp"]
}
